<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="380dp"
    android:layout_height="210dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/movie_item_color"
    android:padding="4dp"
    android:layout_margin="4dp">

    <ImageView
        android:id="@+id/capa"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:src="@mipmap/scott_pilgrim2"
        android:layout_marginTop="2dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nome"
        android:layout_marginTop="5dp"
        android:textSize="16sp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:text="Scott Pilgrim contra o Mundo"
        app:layout_constraintLeft_toRightOf="@+id/capa"
        app:layout_constraintTop_toTopOf="@+id/capa"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/genero"
        android:layout_marginTop="5dp"
        android:textSize="10sp"
        android:textColor="#fff"
        android:text="Ação, Romance"
        app:layout_constraintLeft_toRightOf="@+id/capa"
        app:layout_constraintTop_toBottomOf="@+id/nome"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pais"
        android:layout_marginTop="5dp"
        android:textSize="10sp"
        android:textColor="#fff"
        android:text="Unated States"
        app:layout_constraintLeft_toRightOf="@+id/capa"
        app:layout_constraintTop_toBottomOf="@+id/genero"/>
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/sinopse"
        android:layout_marginTop="5dp"
        android:textSize="10sp"
        android:textColor="@color/icon_color"
        android:text="@string/example_sinopse"
        app:layout_constraintLeft_toRightOf="@+id/capa"
        app:layout_constraintTop_toBottomOf="@+id/pais"/>




</androidx.constraintlayout.widget.ConstraintLayout>